{{ range $p := .opts.Attrs -}}
{{ if eq $p.CommonType "text" -}}
<%= f.TextAreaTag("{{$p.Name}}", {rows: 10}) %>
{{ else -}}
{{ if eq $p.CommonType "bool" -}}
<%= f.CheckboxTag("{{$p.Name}}", {unchecked: false}) %>
{{ else -}}
<%= f.InputTag("{{$p.Name}}") %>
{{ end -}}
{{ end -}}
{{ end -}}

<button class="btn btn-success" role="submit">Save</button>
